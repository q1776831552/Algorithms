<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <FrameLayout android:id="@+id/panel"
		android:layout_alignParentTop="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
		android:layout_centerHorizontal="true" android:maxHeight="96dp">
			<LinearLayout android:id="@+id/llAdvancedGroup"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scrollbarAlwaysDrawHorizontalTrack="true"
				android:scrollbars="horizontal"
				android:scrollbarStyle="insideOverlay"
				/>
	</FrameLayout>
    
	<FrameLayout android:id="@+id/middleButton"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/wheel"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" 
		android:maxHeight="120dp"
		android:minHeight="120dp" 
		android:minWidth="60dp" 
		android:maxWidth="60dp" />
		<FrameLayout android:id="@+id/leftButton"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/zuo"
		android:layout_alignParentLeft="true" 
		android:layout_toLeftOf="@id/middleButton"
		android:layout_alignParentBottom="true" 
		android:maxHeight="120dp"
		android:minHeight="120dp" />
	
	<FrameLayout android:id="@+id/rightButton"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/you"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true" 
		android:layout_toRightOf="@id/middleButton"
		android:maxHeight="120dp" 
		android:minHeight="120dp" />
	
    <FrameLayout
        android:id="@+id/touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/dragon1"
        android:layout_alignParentLeft="true" 
        android:layout_alignParentRight="true"
        android:layout_above="@id/middleButton"
        android:layout_below="@+id/panel"
        />
    
   

</RelativeLayout>